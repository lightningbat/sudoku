<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_playing_page"
    android:background="#ffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/loading_screen"
        android:background="@drawable/loading_screen"
        android:padding="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:layout_marginTop="20.0dip"
            android:indeterminate="true"
            android:indeterminateTint="#ffffff"
            android:indeterminateTintMode="src_in" />

        <TextView
            android:textSize="25.0sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..." />

    </LinearLayout>

    <ViewStub
        android:layout_gravity="center"
        android:id="@+id/stub"
        android:layout="@layout/playing_page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:id="@+id/transparent_screen"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:id="@+id/notes_data_eraser"
        android:background="#70000000"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_gravity="center"
            android:background="@drawable/popup_box"
            android:layout_width="280dp"
            android:layout_height="350dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:background="#808080"
                android:padding="3px"
                android:layout_marginTop="25dp"
                android:orientation="vertical" >

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_1"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_2"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_3"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_3" />

                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_4"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_5"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_5" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_6"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_6" />

                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_7"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_8"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_8" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/notes_cell_9"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:layout_margin="1px"
                        android:textFontWeight="400"
                        android:tag="cell_9" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/checked_box_icon"
                android:layout_marginTop="15dp"
                android:id="@+id/checked_box" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/popup_screen"
        android:background="#70000000"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center" >

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/paused"
            android:background="@drawable/popup_box"
            android:layout_width="220dp"
            android:layout_height="250dp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Paused"
                android:textSize="35sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <android.widget.Button
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:text="Resume"
                android:textSize="22sp"
                android:textColor="#000"
                android:textFontWeight="400"
                android:layout_marginTop="20dp"
                android:onClick="resume"
                android:background="@drawable/popup_box_buttons" />

            <android.widget.Button
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:text="Restart"
                android:textSize="22sp"
                android:textColor="#000"
                android:textFontWeight="400"
                android:layout_marginTop="15dp"
                android:onClick="restart"
                android:background="@drawable/popup_box_buttons" />

            <android.widget.Button
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:text="New Game"
                android:textSize="22sp"
                android:textColor="#000"
                android:textFontWeight="400"
                android:layout_marginTop="15dp"
                android:onClick="new_game"
                android:background="@drawable/popup_box_buttons" />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_gravity="center"
            android:id="@+id/times_up"
            android:background="@drawable/popup_box"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time's UP"
                android:textSize="35sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <android.widget.Button
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:text="Restart"
                android:textSize="22sp"
                android:textColor="#000"
                android:textFontWeight="400"
                android:layout_marginTop="15dp"
                android:onClick="restart"
                android:background="@drawable/popup_box_buttons" />

            <android.widget.Button
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:text="New Game"
                android:textSize="22sp"
                android:textColor="#000"
                android:textFontWeight="400"
                android:layout_marginTop="15dp"
                android:onClick="new_game"
                android:background="@drawable/popup_box_buttons" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/game_over"
            android:background="@drawable/popup_box"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Game Over"
                android:textSize="35sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <android.widget.Button
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:text="Restart"
                android:textSize="22sp"
                android:textColor="#000"
                android:textFontWeight="400"
                android:layout_marginTop="15dp"
                android:onClick="restart"
                android:background="@drawable/popup_box_buttons" />

            <android.widget.Button
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:text="New Game"
                android:textSize="22sp"
                android:textColor="#000"
                android:textFontWeight="400"
                android:layout_marginTop="15dp"
                android:onClick="new_game"
                android:background="@drawable/popup_box_buttons" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>